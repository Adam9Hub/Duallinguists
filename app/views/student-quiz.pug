extends layout

block content
    h1 Student Quiz - Language: #{languageID}

    if questions.length
        form(action="/submit-quiz" method="POST")
            each question in questions
                .question
                    h2 #{question.QuestionText}
                    ul
                        each answer in question.answers
                            li
                                label
                                    input(type="radio" name="question-#{question.QuestionID}" value="#{answer.AnswerID}" required)
                                    | #{answer.AnswerText}

            button(type="submit") Submit Student Quiz
    else
        p No questions available for this language.

form(action="/student-quiz", method="GET")
    input(type="hidden", name="languageID", value=languageID)
    button(type="submit") Student Quiz


